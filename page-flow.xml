<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path="/nomisma/admin/edit/" view="xforms/edit.xhtml"/>
	<page path="/nomisma/admin/" view="xforms/admin.xhtml"/>
	<page path="/nomisma/login" view="xforms/login.xhtml"/>
	
	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->

	<!-- **** SERIALIZATION **** -->
	<!-- RDF direct output -->
	<page path="/nomisma/id/(.*)\.rdf" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/id-to-rdf.xpl"/>	
	<!-- Object KML -->
	<page path="/nomisma/id/(.*)\.kml" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/id-to-kml.xpl"/>	

	<!-- Atom feed -->
	<page path="/nomisma/feed" model="xpl/solr-query.xpl" view="xpl/feed.xpl"/>
	
	<!-- SPARQL wrapper (URL generator) -->
	<page path="/nomisma/query" view="xpl/sparql-query.xpl"/>
	
	<!-- **** PAGES **** -->
	<page path="/nomisma/id/" model="xpl/solr-query.xpl" view="xpl/page-results.xpl"/>	
	<page path="/nomisma/sparql" view="xpl/page-sparql.xpl"/>
	<page path="/nomisma/apis" view="xpl/page-apis.xpl"/>
	<page path="/nomisma/flickr" view="xpl/page-flickr.xpl"/>
	<page path="/nomisma/" view="xpl/page-index.xpl"/>
	
	<!-- **** DATA DUMPS **** -->
	<page path="/nomisma/nomisma.org.xml" view="dump/nomisma.org.xml"/>
	
	<!-- 303 redirect from official URI to .html -->
	<!--<page path="/nomisma/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/303-redirect.xpl"/>-->

	<!-- public html view -->
	<page path="/nomisma/id/(.*)" matcher="regexp" model="xpl/get-id.xpl" view="xpl/page-display.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
