<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path-info="/nomisma/admin/" view="admin.xhtml"/>
	<page path-info="/nomisma/admin/edit/" view="edit-id.xhtml"/>	


	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->
	<page path-info="/nomisma/xml/(.*)" matcher="oxf:perl5-matcher" model="exist-url.xml" view="xpl/display-xml.xpl"/>
	<page path-info="/nomisma/id/(.*).kml" matcher="oxf:perl5-matcher" view="http://localhost:8080/orbeon/exist/rest/db/nomisma/kml/${1}.kml"/>
	<page path-info="/nomisma/id/(.*).rdf" matcher="oxf:perl5-matcher" model="http://localhost:8080/orbeon/exist/rest/db/nomisma/id/${1}.xml" view="xpl/display-rdf.xpl"/>	
	<page path-info="/nomisma/id/(.*)" matcher="oxf:perl5-matcher" model="http://localhost:8080/orbeon/exist/rest/db/nomisma/id/${1}.xml" view="xpl/display-id.xpl"/>
	
	<!-- Atom feed -->
	<page path-info="/nomisma/feed/" model="exist-url.xml" view="xpl/feed.xpl"/>
	
	<!-- KML service -->
	<page path-info="/nomisma/query.kml" model="exist-url.xml" view="xpl/solr-to-kml.xpl"/>
	
	<page path-info="/nomisma/browse/" model="exist-url.xml" view="xpl/browse.xpl"/>
	
	<!-- index -->
	<page path-info="/nomisma/" model="exist-url.xml" view="xpl/index.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
